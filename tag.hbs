{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<div class="container" style="margin-top: 100px;">

<header class="section">
    <h1 class="title is-4">{{@blog.title}}</h1>
    <p class="subtitle is-6">{{@blog.description}}</p>
</header>

<div class="columns">
  
<div class="column is-two-thirds">
        <section class="section">
              <div class="heading" style="padding-bottom: 24px">
                {{#tag}}
                  <h2 class="title is-2">Posts in #{{name}}</h2>
                  <p class="subtitle is-4">{{#if description}}{{description}}{{/if}}</p>
                {{/tag}}
              </div>

              <div class="content">        
              {{!-- The main content area on the homepage --}}
              <main class="content" role="main">
                {{#foreach posts}}
                <div class="box">
                        <article class="media">
                          <div class="media-content">
                            <h3 class="title is-5"><a href="{{url}}">{{title}}</a></h3>
                            <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
                          </div>
                        </article>
                </div>
                <br>
                {{ else }}
                <p>There are no posts for this tag.</p>
                {{/foreach}}
              </main>
              <div>
                  {{pagination}}
              </div>
            </div>
 
        </section>
</div>
<div class="column">
  <section class="section">
    {{> instagram }}
  </section>
  <section class="section has-text-centered">
    {{> socialmenu }}
  </section>
</div>

</div>
       </div>