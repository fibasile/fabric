  <section id="blog" class="section is-small is-primary">
    <div class="container">
      <h1 class="title is-1 has-text-centered">Projects</h1>
    <div class="columns">
      {{#get "posts" limit="3" filter="tags:[news]" include="tags,author"}}
      {{#foreach posts}}

      <div class="column is-one-third">
        <div class="card">
          <div class="card-image">
            <figure class="image">
              <img src="{{image}}" alt="Cover image for {{title}}">
            </figure>
          </div>
          <div class="card-header">
          <div class="card-header-title">
           <a href="{{url}}">{{title}}</a>
          </div>
        </div>
                  <div class="card-content">
                    <div class="content">
                      {{excerpt words="26"}}
                    </div>
                  </div>
                  <footer class="card-footer">
                    <a href="{{url}}" class="card-footer-item  read-more">Read more</a>
                  </footer>
            </div><!-- card -->
        </div> <!-- column -->
        {{/foreach}}
        {{/get}}
      </div> <!-- columns -->
    </div>
  </section>
